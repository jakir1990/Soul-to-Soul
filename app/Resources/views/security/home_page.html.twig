                });
            });
        });

        $(document).ready(function () {
            $('#birth_date').change(function () {
                var id = $(this).val();
                var path = "{{ (path('count_dob', {'id': 'ReplaceMeWithCorrectValue'})) }}";
                path = path.replace("ReplaceMeWithCorrectValue", id);
