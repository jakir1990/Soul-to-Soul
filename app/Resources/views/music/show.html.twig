{% extends 'base.html.twig' %}

{% block body %}
    <h1>Music</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ music.id }}</td>
            </tr>
            <tr>
                <th>Musicname</th>
                <td>{{ music.musicName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('music_index') }}">Back to the list</a>
        </li>
        <li>
